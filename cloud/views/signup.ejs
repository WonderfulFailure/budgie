<form name="signup" id="signup" novalidate>
    <h2>Sign Up</h2>

    <div class="col-lg-12">
        <div class="alert alert-danger" ng-show="submitError">{{ submitError }}</div>
        <div class="alert alert-danger" ng-show="signup.username.$invalid && !signup.username.$pristine">Please enter a username</div>
        <div class="alert alert-danger" ng-show="signup.password.$invalid && !signup.password.$pristine">Please enter a password</div>
    </div>
<br><br><br>
    <div class="col-lg-12">
        <div class="form-group medium-input" ng-class="{ 'has-error' : signup.username.$invalid && !signup.username.$pristine }">
            <label for="username" class="sr-only">Username</label>
            <input class="form-control input-lg" type="text" value="" name="username" id="username" placeholder="Username" ng-model="username" required />
        </div>

        <div class="form-group medium-input" ng-class="{ 'has-error' : signup.password.$invalid && !signup.password.$pristine }">
            <label for="password" class="sr-only">Password</label>
            <input class="form-control input-lg" type="password" value="" name="password" id="password" placeholder="Password" ng-model="password" required />
                    <a href="#/login" class="btn btn-teal btn-lg">Log In</a>

        </div>
<br><br>

        <input class="btn btn-teal btn-lg" type="submit" ng-click="processSignup()" value="Sign Up" ng-disabled="signup.$invalid" />
    </div>
</form>