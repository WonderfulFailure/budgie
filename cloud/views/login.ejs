<form name="login" id="login" novalidate>
    <h2>Login</h2>

    <div class="col-lg-12">
        <div class="alert alert-danger" ng-show="loginError">{{ loginError }}</div>
        <div class="alert alert-danger" ng-show="login.username.$invalid && !login.username.$pristine">Please enter a username</div>
        <div class="alert alert-danger" ng-show="login.password.$invalid && !login.password.$pristine">Please enter a password</div>
    </div>

    <div class="col-lg-12">
        <div class="form-group" ng-class="{ 'has-error' : login.username.$invalid && !login.username.$pristine }">
            <label for="username" class="sr-only">Username</label>
            <input class="form-control input-lg" type="text" value="" name="username" id="username" placeholder="Username" ng-model="username" required />
        </div>

        <div class="form-group" ng-class="{ 'has-error' : login.password.$invalid && !login.password.$pristine }">
            <label for="password" class="sr-only">Password</label>
            <input class="form-control input-lg" type="password" value="" name="password" id="password" placeholder="Password" ng-model="password" required />
        </div>

        <input class="btn btn-teal" type="submit" ng-click="processLogin()" value="Login" ng-disabled="login.$invalid" />
        <a href="#/signup" class="btn btn-teal">Sign Up</a>
    </div>
</form>