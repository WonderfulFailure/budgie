<form id="login" ng-submit="login()">
  <h2>Log In</h2>

  <label for="username">Username</label>
  <input type="text" value="" name="username" ng-model="username" />

  <label for="password">Password</label>
  <input type="password" value="" name="password" ng-model="password" />

  <input type="submit" class="btn btn-primary" value="Login" />
  <a class="btn btn-default" href="/signup">Register</a>
</form>